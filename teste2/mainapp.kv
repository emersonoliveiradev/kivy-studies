<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 50
        Image:
            source: 'kivy-logo.png'
            allow_stretch: True
            size_hint_y: None
            height: 100
        Button:
            text: 'Tarefas'
            on_release: app.root.current = 'tarefas'
        Button:
            text: 'Assistente'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Tarefas'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Menu'
                    on_release: app.root.current = 'menu'
                ActionSeparator:
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id:box_scroll
                orientation:'vertical'
                size_hint_y:None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: texto
            Button:
                size_hint_x: None
                text: '+'
                on_release: root.addWidget()

<Tarefa>:
    size_hint_y: None
    height:200
    Label:
        id: label
        font_size: 30
    Button:
        text:'x'
        size_hint_x:None
        width:60
        on_release: app.root.get_screen('tarefas').ids.box_scroll.remove_widget(root)

